# Course Selection Platform - Environment Variables Template
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_mongodb_password_here
MONGO_INITDB_DATABASE=course-selection
MONGODB_URI=mongodb://admin:your_mongodb_password_here@mongodb:27017/course-selection?authSource=admin

# For local development (if running MongoDB locally)
# MONGODB_URI=mongodb://localhost:27017/course-selection

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# For local development (if running Redis locally without password)
# REDIS_URL=redis://localhost:6379

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development

# JWT Configuration (Generate strong secrets!)
JWT_SECRET=your_very_strong_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_very_strong_refresh_secret_minimum_32_characters

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000

# API Configuration
REACT_APP_API_BASE_URL=http://backend:3001/api/v1

# For local development (when running outside Docker)
# REACT_APP_API_BASE_URL=http://localhost:3001/api/v1

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_minimum_32_characters

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# Email Service (if implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# File Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Google OAuth (if implemented)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Debug Configuration
DEBUG=course-selection:*

# Testing Database (for tests)
MONGODB_TEST_URI=mongodb://localhost:27017/course-selection-test