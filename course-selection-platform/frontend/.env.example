# Development Configuration
REACT_APP_ENV=development
GENERATE_SOURCEMAP=true

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api/v1
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_JWT_STORAGE_KEY=course_selection_token
REACT_APP_REFRESH_TOKEN_KEY=course_selection_refresh_token

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Features Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Socket.IO
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_SOCKET_PATH=/socket.io

# Application Metadata
REACT_APP_APP_NAME=Course Selection Platform
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION=University Course Selection System

# Theme Configuration
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
REACT_APP_DEFAULT_THEME=light

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Cache Configuration
REACT_APP_CACHE_DURATION=300000

# Development Tools
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_MOCK_API=false